@model Category

@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>

<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">

            @foreach (Post item in Model.Posts)
            {
              @await Html.PartialAsync("_BlogPartial",item)
            }


        </div>
    </div>
</div>

